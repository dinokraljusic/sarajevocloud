<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zuta"
    android:weightSum="100"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:baselineAligned="false"
        android:layout_weight="90"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:text=""
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:paddingBottom="11dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="7"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:id="@+id/textView4"
                android:text="SARAJEVO CLOUD JE APLIKACIJA POMOĆU KOJE KORISNICI/E MOGU NADOGRADITIFIZIČKI PROSTOR VIRTUELNIM OBJEKTIMA"
                android:paddingBottom="25dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="7"
                android:textColor="@color/black"
                android:layout_height="match_parent"
                android:id="@+id/textView5"
                android:text="ZA KORIŠTENJE APLIKACIJE POTREBAN VAM JE ANDROID MOBILNI UREĐAJ SA KAMEROM, SENZORIMA (KOMPAS I AKCELEROMETAR) I INTERNET"
                android:paddingBottom="25dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="7"
                android:textColor="@color/black"
                android:layout_height="match_parent"
                android:id="@+id/textView6"
                android:text="NAMJERA PROJEKTA JE UČINITI VIDLJIVIM I PODIJELITI POJEDINAČNE STAVOVE I
        IDEJE O GRADU, OMOGUĆITI ANONIMNOM PROLAZNIKU DA POSTANE DIZAJNER ILI
        KRITIČAR JAVNOG PROSTORA I TRAGATI ZA ZAJEDNIČKOM VIZIJOM PROSTORA"
                android:paddingBottom="25dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="7"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:id="@+id/textView7"
                android:text=""
                android:paddingBottom="25dp" />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/textView8"
                android:textColor="#000000"
                android:text="AUTORI:\nASMIR MUTEVELIĆ, KENAN VATRENJAK,\nIBRICA JAŠAREVIĆ, VEDAD ISLAMBEGOVIĆ"
                android:layout_weight="10"
                android:layout_height="wrap_content"
                android:paddingBottom="25dp" />
        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="10"
        android:layout_height="0dp"
        android:weightSum="100">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="25"
            android:src="@drawable/empty"
            android:text=" "
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:id="@+id/textView14"
            android:layout_marginBottom="8dp"
            android:layout_weight="50" />

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="25"
            android:src="@drawable/black_arrow_back"
            android:id="@+id/ivBack"
            android:gravity="right"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>